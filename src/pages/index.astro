---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get latest blog posts for homepage
const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .filter(post => post.data.date <= new Date())
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<Layout
  title="Jean Silva - Blog"
  description="Thoughts on AI agents, search engineering, and software development."
  ogType="website"
>
	<main class="min-h-screen flex flex-col justify-center items-center p-4">
        <div class="max-w-2xl w-full text-center space-y-8">
            <h1 class="text-4xl md:text-6xl font-bold tracking-tight">
                <span class="text-green-500">Hello,</span> World.
            </h1>
            <p class="text-xl text-zinc-400">
                I'm Jean Silva, a Senior Search Engineer. <br>
                Welcome to my personal slice of the internet.
            </p>
            
            <div class="flex justify-center gap-6 pt-8">
                <a href="/resume" class="group relative px-6 py-3 font-bold text-zinc-950 bg-green-500 overflow-hidden rounded-sm transition-all hover:bg-green-400">
                    <span class="relative z-10">View Resume >_</span>
                </a>
                <a href="https://github.com/jeancsil" target="_blank" class="px-6 py-3 font-bold text-zinc-400 border border-zinc-800 rounded-sm hover:text-white hover:border-zinc-600 transition-colors">
                    GitHub
                </a>
            </div>

            <div class="pt-24 text-left border-t border-zinc-900 mt-24">
                <h2 class="text-green-500 font-mono text-sm mb-6 uppercase tracking-wider">Latest Posts</h2>
                <div class="space-y-4">
                    {latestPosts.length === 0 ? (
                        <div class="p-6 border border-zinc-900 rounded bg-zinc-900/30 text-center py-12">
                            <p class="text-zinc-500 font-mono">No posts found. echo "Coming Soon..."</p>
                        </div>
                    ) : (
                        latestPosts.map((post) => (
                            <a href={`/blog/${post.id.replace(/\.md$/, '')}`} class="group block p-5 border border-zinc-900 rounded hover:border-green-500/50 transition-colors">
                                <div class="flex flex-col gap-2">
                                    <div class="flex items-center gap-2 text-xs text-zinc-500">
                                        <time datetime={post.data.date.toISOString()}>
                                            {post.data.date.toLocaleDateString('en-US', {
                                                year: 'numeric',
                                                month: 'short',
                                                day: 'numeric'
                                            })}
                                        </time>
                                        {post.data.tags.length > 0 && (
                                            <>
                                                <span class="text-zinc-700">â€¢</span>
                                                <span class="text-green-400">{post.data.tags[0]}</span>
                                            </>
                                        )}
                                    </div>
                                    <h3 class="text-lg font-bold text-zinc-100 group-hover:text-green-400 transition-colors">
                                        {post.data.title}
                                    </h3>
                                    <p class="text-sm text-zinc-500 line-clamp-2">
                                        {post.data.description}
                                    </p>
                                </div>
                            </a>
                        ))
                    )}
                </div>
                <a href="/blog" class="inline-flex items-center gap-2 mt-6 text-sm text-zinc-400 hover:text-green-400 transition-colors">
                    View all posts
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
            </div>
        </div>
	</main>
</Layout>
