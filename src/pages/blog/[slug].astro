---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

/**
 * Generate static paths for all blog posts
 */
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id.replace(/\.md$/, '') },
    props: { post },
  }));
}

interface Props {
  post: any;
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout title={`${post.data.title} | Jean Silva`}>
  <main class="min-h-screen p-4 md:p-8 max-w-4xl mx-auto">
    <!-- Back to blog link -->
    <a href="/blog" class="inline-flex items-center gap-2 text-sm text-zinc-500 hover:text-green-400 transition-colors mb-12">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Blog
    </a>

    <!-- Post header -->
    <header class="mb-12">
      <h1 class="text-3xl md:text-5xl font-bold mb-6 text-zinc-100 leading-tight">
        {post.data.title}
      </h1>

      <div class="flex flex-wrap items-center gap-4 text-sm text-zinc-500">
        <time datetime={post.data.date.toISOString()} class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          {post.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>

        {post.data.tags.length > 0 && (
          <>
            <span class="text-zinc-700">â€¢</span>
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <span class="px-2 py-0.5 bg-zinc-900 text-green-400 text-xs rounded">
                  {tag}
                </span>
              ))}
            </div>
          </>
        )}
      </div>
    </header>

    <!-- Post content -->
    <article class="prose prose-invert prose-zinc max-w-none prose-headings:text-zinc-100 prose-a:text-green-400 prose-code:text-zinc-300 prose-pre:bg-zinc-900 prose-pre:border prose-pre:border-zinc-800">
      <Content />
    </article>

    <!-- Post footer -->
    <footer class="mt-16 pt-8 border-t border-zinc-900">
      <div class="text-center space-y-4">
        <p class="text-zinc-500">Liked this post? Let me know on GitHub.</p>
        <a
          href={`https://github.com/jeancsil/jeancsil.com/discussions/new?category=blog-feedback&title=${encodeURIComponent(`Feedback: ${post.data.title}`)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 bg-green-900/30 text-green-400 border border-green-500/50 rounded hover:bg-green-900/50 transition-colors text-sm"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Discuss on GitHub
        </a>
      </div>
    </footer>
  </main>
</Layout>

<style>
  /* Custom prose styling for better code blocks and headings */
  :global(.prose) {
    font-family: inherit;
    line-height: 1.75;
    color: var(--color-text);
  }

  :global(.prose h2) {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1rem;
    color: #f4f4f5;
  }

  :global(.prose h3) {
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: #e4e4e7;
  }

  :global(.prose h4) {
    font-size: 1.125rem;
    font-weight: 700;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: #d4d4d8;
  }

  :global(.prose p) {
    color: #a1a1aa;
    line-height: 1.75;
    margin-bottom: 1rem;
  }

  :global(.prose a) {
    color: #22c55e;
    text-decoration: underline;
    text-decoration-color: #27272a;
    text-underline-offset: 0.25rem;
    transition: all 0.2s;
  }

  :global(.prose a:hover) {
    color: #4ade80;
    text-underline-offset: 0.125rem;
  }

  :global(.prose code) {
    background-color: #18181b;
    color: #22c55e;
    padding: 0.25rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  :global(.prose pre) {
    background-color: #18181b;
    border: 1px solid #27272a;
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1rem 0;
  }

  :global(.prose pre code) {
    background-color: transparent;
    padding: 0;
    color: #d4d4d8;
  }

  :global(.prose ul) {
    list-style-type: disc;
    list-style-position: inside;
    padding-left: 1rem;
    space-y: 0.5rem;
  }

  :global(.prose ul ::marker) {
    color: #22c55e;
  }

  :global(.prose ol) {
    list-style-type: decimal;
    list-style-position: inside;
    padding-left: 1rem;
    space-y: 0.5rem;
  }

  :global(.prose ol ::marker) {
    color: #22c55e;
  }

  :global(.prose li) {
    color: #a1a1aa;
    margin-bottom: 0.5rem;
  }

  :global(.prose blockquote) {
    border-left: 4px solid #22c55e;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #71717a;
  }

  :global(.prose strong) {
    color: #f4f4f5;
    font-weight: 700;
  }

  :global(.prose hr) {
    border-color: #18181b;
    border-style: solid;
    border-width: 0;
    border-top-width: 1px;
    margin: 2rem 0;
  }

  :global(.prose table) {
    width: 100%;
    margin: 1.5rem 0;
    border-collapse: collapse;
  }

  :global(.prose th) {
    color: #f4f4f5;
    border-bottom: 1px solid #27272a;
    padding: 1rem;
    text-align: left;
  }

  :global(.prose td) {
    color: #a1a1aa;
    border-bottom: 1px solid #09090b;
    padding: 1rem;
  }
</style>
