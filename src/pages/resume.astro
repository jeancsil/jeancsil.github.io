---
import Layout from '../layouts/Layout.astro';
import resumeData from '../content/cv/resume.json';

const { basics, experience, education, skills, languages, certifications, summary } = resumeData;
---

<Layout title={`${basics.name} - Resume`}>
	<main class="min-h-screen p-4 md:p-8 max-w-7xl mx-auto">
        <header class="mb-12 border-b border-green-900/50 pb-8 animate-fade-in">
            <h1 class="text-4xl md:text-5xl font-bold text-green-400 mb-2">
                <span class="text-zinc-500 mr-2">></span>{basics.name}
            </h1>
            <p class="text-xl text-zinc-400 mb-4">{basics.label}</p>
            <div class="flex flex-wrap gap-4 text-sm text-zinc-500">
                <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    {basics.location}
                </span>
                <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                    {basics.email}
                </span>
                {basics.profiles.map((profile) => (
                    <a href={profile.url} target="_blank" class="flex items-center gap-1 hover:text-green-400 transition-colors">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                        {profile.network}
                    </a>
                ))}
            </div>
            <div class="mt-6 flex gap-4">
                <a href="/resume.pdf" class="inline-flex items-center px-4 py-2 bg-green-900/30 text-green-400 border border-green-500/50 rounded hover:bg-green-900/50 transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                    Download PDF
                </a>
            </div>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            <!-- Sidebar -->
            <aside class="space-y-8">
                <section>
                    <h2 class="text-green-400 font-bold uppercase tracking-wider mb-4 border-b border-zinc-800 pb-2">Skills</h2>
                    <div class="flex flex-wrap gap-2">
                        {skills.map((skill: string) => (
                            <span class="px-2 py-1 bg-zinc-900 border border-zinc-800 text-sm text-zinc-300 rounded hover:border-green-500/50 transition-colors cursor-default">
                                {skill}
                            </span>
                        ))}
                    </div>
                </section>

                <section>
                    <h2 class="text-green-400 font-bold uppercase tracking-wider mb-4 border-b border-zinc-800 pb-2">Languages</h2>
                    <ul class="space-y-2 text-zinc-400 text-sm">
                        {languages.map((lang: any) => (
                            <li class="flex justify-between">
                                <span class="text-zinc-200">{lang.language}</span>
                                <span class="text-zinc-500 italic">{lang.fluency}</span>
                            </li>
                        ))}
                    </ul>
                </section>

                <section>
                    <h2 class="text-green-400 font-bold uppercase tracking-wider mb-4 border-b border-zinc-800 pb-2">Certifications</h2>
                    <ul class="space-y-2 text-zinc-400 text-sm list-disc list-inside marker:text-green-500">
                        {certifications.map((cert: string) => (
                            <li>{cert}</li>
                        ))}
                    </ul>
                </section>
            </aside>

            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-12">
                <section>
                    <h2 class="text-xl font-bold text-white mb-6 flex items-center">
                        <span class="text-green-500 mr-2">#</span> Summary
                    </h2>
                    <p class="text-zinc-400 leading-relaxed">
                        {summary}
                    </p>
                </section>

                <section>
                    <h2 class="text-xl font-bold text-white mb-6 flex items-center">
                        <span class="text-green-500 mr-2">#</span> Experience
                    </h2>
                    <div class="space-y-10 relative border-l border-zinc-900 ml-3 pl-8">
                        {experience.map((job: any) => (
                            <div class="relative">
                                <span class="absolute -left-[39px] top-1 w-5 h-5 bg-zinc-950 border-2 border-green-500 rounded-full"></span>
                                <div class="mb-2">
                                    <h3 class="text-lg font-bold text-zinc-100">{job.position}</h3>
                                    <div class="flex flex-wrap gap-x-2 text-zinc-500 text-sm mb-1">
                                        <span class="text-green-400 font-medium">{job.company}</span>
                                        <span>â€¢</span>
                                        <span>{job.startDate} - {job.endDate}</span>
                                        {job.duration && <span class="text-zinc-600">({job.duration})</span>}
                                    </div>
                                    <div class="text-zinc-600 text-xs">{job.location}</div>
                                </div>
                                <ul class="list-disc leading-relaxed text-zinc-400 space-y-2 ml-4 marker:text-zinc-600">
                                    {job.highlights.map((highlight: string) => (
                                        <li>{highlight}</li>
                                    ))}
                                </ul>
                            </div>
                        ))}
                    </div>
                </section>

                <section>
                    <h2 class="text-xl font-bold text-white mb-6 flex items-center">
                        <span class="text-green-500 mr-2">#</span> Education
                    </h2>
                    <div class="space-y-6">
                        {education.map((edu: any) => (
                            <div>
                                <h3 class="text-lg font-bold text-zinc-100">{edu.institution}</h3>
                                <p class="text-zinc-400">{edu.studyType}, {edu.area}</p>
                                <p class="text-zinc-500 text-sm">{edu.startDate} - {edu.endDate}</p>
                            </div>
                        ))}
                    </div>
                </section>
            </div>
        </div>
	</main>
</Layout>

<style>
    .animate-fade-in {
        animation: fadeIn 0.5s ease-out forwards;
    }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
